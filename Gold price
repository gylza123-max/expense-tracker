    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let chart = null;

        function generateGoldData() {
            const basePrice = 2050;
            const volatility = 80;
            let currentPrice = basePrice;
            const prices = [];
            const labels = [];
            const now = new Date();

            for (let i = 364; i >= 0; i--) {
                const date = new Date(now.getTime() - i * 24 * 60 * 60 * 1000);
                const change = (Math.random() - 0.5) * volatility;
                currentPrice += change;
                currentPrice = Math.max(currentPrice, 1800);
                currentPrice = Math.min(currentPrice, 2300);
                prices.push(currentPrice);
                
                if (i % 7 === 0) {
                    labels.push(date.toLocaleDateString('id-ID', { month: 'short', day: 'numeric' }));
                } else {
                    labels.push('');
                }
            }

            return { prices, currentPrice, labels };
        }

        function initChart() {
            const { prices, currentPrice, labels } = generateGoldData();
            const highPrice = Math.max(...prices, currentPrice);
            const lowPrice = Math.min(...prices, currentPrice);
            const weekAgoPrice = prices[Math.max(0, prices.length - 7)];
            const changeWeek = ((currentPrice - weekAgoPrice) / weekAgoPrice) * 100;

            document.getElementById('currentPrice').textContent = `$${currentPrice.toFixed(2)}`;
            document.getElementById('changeWeek').textContent = `${changeWeek.toFixed(2)}%`;
            document.getElementById('changeWeek').style.color = changeWeek >= 0 ? '#4ade80' : '#ff6b6b';
            document.getElementById('highPrice').textContent = `$${highPrice.toFixed(2)}`;
            document.getElementById('lowPrice').textContent = `$${lowPrice.toFixed(2)}`;
            document.getElementById('updateTime').textContent = `Updated: ${new Date().toLocaleString('id-ID')}`;

            document.getElementById('loadingMessage').style.display = 'none';
            document.getElementById('chartWrapper').style.display = 'block';

            const ctx = document.getElementById('priceChart').getContext('2d');
            if (chart) chart.destroy();chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Gold Price (USD/oz)',
                        data: prices,
                        borderColor: '#ffd700',
                        backgroundColor: 'rgba(255, 215, 0, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 2,
                        pointBackgroundColor: '#ffd700',
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: { color: '#e0e0e0', font: { size: 12 } }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            titleColor: '#ffd700',
                            bodyColor: '#e0e0e0',
                        }
                    },
                    scales: {
                        y: {
                            grid: { color: 'rgba(255, 255, 255, 0.05)' },
                            ticks: { color: '#a0a0a0' }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#a0a0a0' }
                        }
                    }
                }
            });
        }

        document.addEventListener('DOMContentLoaded', initChart);
    </script>
